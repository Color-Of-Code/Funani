<Window x:Class="Funani.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:funani="clr-namespace:Funani.Gui.Controls"
        Title="Funani - manage big amount of files easily"
        Closing="Window_Closing"
        Icon="pack://application:,,,/Images/logo2.png"
        Height="640" Width="1024">
    <Grid>
    	<TabControl>
			<TabItem Header="File explorer">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="1*"></ColumnDefinition>
						<ColumnDefinition Width="10"></ColumnDefinition>
						<ColumnDefinition Width="2*"></ColumnDefinition>
					</Grid.ColumnDefinitions>
	    			<funani:DirectoryExplorer Grid.Column="0" x:Name="directoryExplorer">
					</funani:DirectoryExplorer>
					<GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></GridSplitter>
	    			<funani:FileView Grid.Column="2" x:Name="fileExplorer">
					</funani:FileView>
				</Grid>
	    	</TabItem>
    	</TabControl>
    </Grid>
</Window>
